{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "paths": {
      "@/*": [
        "./src/*"
      ]
    },
    "skipLibCheck": true
  },
  "include": [
    "app/**/*",
    "src/**/*",
    "index.ts"
  ],
  "exclude": [
    "Archive/**/*",
    "node_modules",
    ".expo",
    "dist",
    "web-build"
  ]
}
